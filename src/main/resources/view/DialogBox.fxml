<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root type="HBox" alignment="TOP_RIGHT" spacing="10" prefWidth="400.0"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1"
         style="-fx-background-color: transparent;">
  <padding>
    <Insets top="15.0" right="10.0" bottom="15.0" left="10.0"/>
  </padding>
  <children>
    <Label fx:id="dialog" text="Your message goes here..."
           wrapText="true" 
           maxWidth="300"
           style="-fx-font-size: 14px; -fx-text-fill: #ffffff; -fx-background-color: #444444; -fx-background-radius: 10; -fx-padding: 10;" />
    <ImageView fx:id="displayPicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
  </children>
</fx:root>
